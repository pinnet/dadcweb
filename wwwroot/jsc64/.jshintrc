{
	"globals": { "nl": false, "$": false, "trace": false, "Class": false },
	"plusplus": false,
	"bitwise": false,
	"browser": true,

	// vanilla settings
	"camelcase": true,
	"curly": true,
	"eqeqeq": true,
	"forin": true,
	"immed": true,
	"latedef": true,
	"newcap": true,
	"noarg": true,
	"noempty": true,
	"nonew": true,
	"regexp": true,
	"undef": true,
	"unused": true,
	"trailing": true,
	"strict": true,

	// Relaxing options
	"laxbreak": true,

	// Legacy options
	"onevar": true,
	"white": true,

	"indent": 4,
	"maxlen": 120
}